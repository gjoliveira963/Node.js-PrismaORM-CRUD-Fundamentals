generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  age       Int?
  balance   Float    @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt

  @@map("users")
}
